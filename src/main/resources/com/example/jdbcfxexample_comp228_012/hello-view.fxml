<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.jdbcfxexample_comp228_012.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Button fx:id="dropButton" mnemonicParsing="false" onAction="#onDrop" text="Drop Table" />
   <Button fx:id="createButton" mnemonicParsing="false" onAction="#onCreate" text="Create Table" />
   <TextField fx:id="studentIdField" />
   <TextField fx:id="studentNameField" />
   <Button fx:id="addButton" mnemonicParsing="false" onAction="#onAdd" text="Add" />
   <TableView fx:id="table" prefHeight="200.0" prefWidth="200.0">
     <columns>
       <TableColumn fx:id="studentIdColumn" prefWidth="75.0" text="C1" />
       <TableColumn fx:id="studentNameColumn" prefWidth="75.0" text="C2" />
     </columns>
   </TableView>
   <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#onDelete" text="Delete" />

    <Label fx:id="welcomeText" />
</VBox>
